{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports":true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"],
    },
    "resolveJsonModule": true
  },
  "rules": {
    "no-console": false
  },
  "lib": ["es2015"],
  "include": ["./src/*"]
}